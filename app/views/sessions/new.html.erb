<%= stylesheet_link_tag "sessions/common", :media => "all" %>

<div class="inner">
	<%= form_for :session, url: login_path do |f| %>
		<div class="input_block">
			<%= f.label "アカウント名：", { :class => "input_label" } %>
  			<%= f.text_field :name, { :class => "input_text" } %>
  		</div>
  		<div class="input_block">
  			<%= f.label "パスワード：", { :class => "input_label" } %>
  			<%= f.text_field :password, { :class => "input_text" } %>
  		</div>
  		<div class="button_block">
  			<%= submit_tag "ログイン", { :class => "login_button" } %>
  		</div>
  	<% end %>
</div>
