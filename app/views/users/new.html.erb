<%= stylesheet_link_tag "users/common", :media => "all" %>

<div class="inner">
	<%= form_with(model: @user, url: account_path) do |f| %>
		<div class="input_block">
			<%= f.label "アカウント名：", { :class => "input_label" } %>
			<%= f.text_field :name, { :class => "input_text" } %>
		</div>
		<div class="input_block">
			<%= f.label "パスワード：", { :class => "input_label" } %>
			<%= f.password_field :password, { :class => "input_text" } %>
		</div>
		<div class="input_block">
			<%= f.label "パスワードの確認：", { :class => "input_label" } %>
			<%= f.password_field :password_confirmation, { :class => "input_text" } %>
		</div>
		<div class="button_block">
			<%= submit_tag "登録", { :class => "regist_button" } %>
		</div>
	<% end %>
</div>